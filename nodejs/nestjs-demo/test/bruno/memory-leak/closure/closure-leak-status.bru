meta {
  name: closure-leak-status
  type: http
  seq: 2
}

get {
  url: {{host}}/memory-leak/closure/status
  body: none
  auth: none
}

assert {
  res.status: eq 200
  res.body.message: isDefined
  res.body.stats: isDefined
  res.body.stats.activeClosures: isNumber
  res.body.stats.totalMemoryAllocated: isNumber
  res.body.stats.isLeaking: isBoolean
}
