meta {
  name: global-variable-leak-start
  type: http
  seq: 1
}

post {
  url: {{host}}/memory-leak/global-variable/start
  body: none
  auth: inherit
}

assert {
  res.status: eq 201
  res.body.stats: isDefined
  res.body.stats.leakedArrays: isNumber
  res.body.stats.estimatedMemoryMB: isNumber
  res.body.stats.isLeaking: isTruthy
}

settings {
  encodeUrl: true
}
